doctype html
html
  head
    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Import materialize.css
    link(type='text/css', href='./stylesheets/materialize.min.css', rel='stylesheet', media='screen,projection')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  |     
  body
    nav
      .nav-wrapper
        a.brand-logo(href='#!') LoginSys
        a.sidenav-trigger(data-target='mobile-demo', href='#')
          i.material-icons menu
        ul.left.hide-on-med-and-down
          li
            a(href='/') Home
          li
            a(href='/members') Members
        ul.right.hide-on-med-and-down
          li
            a.waves-effect.waves-light.btn(href='/login') Login
          li
            a.waves-effect.waves-light.btn(href='/register') Sign Up
    ul#mobile-demo.sidenav
      li
        a(href='/') Home
      li
        a(href='/members') Members
      li
        a(href='/login') Login
      li
        a(href='/register') Sign Up
    
    block content
    // JavaScript at end of body for optimized loading
    script(src='./javascripts/materialize.min.js', type='text/javascript')
